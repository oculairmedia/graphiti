# OpenAI Configuration (default LLM provider)
OPENAI_API_KEY=

# Cerebras Configuration (alternative LLM provider)
# Set USE_CEREBRAS=true to use Cerebras instead of OpenAI/Ollama
USE_CEREBRAS=false
CEREBRAS_API_KEY=
CEREBRAS_MODEL=qwen-3-coder-480b
CEREBRAS_SMALL_MODEL=qwen-3-32b

# Ollama Configuration (alternative LLM provider)
# Set USE_OLLAMA=true to use Ollama instead of OpenAI
# Note: When USE_CEREBRAS=true, Ollama is still used for embeddings
USE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=mistral:latest
OLLAMA_SMALL_MODEL=mistral:latest
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large:latest
USE_OLLAMA_EMBEDDINGS=false

# Dedicated Embedding Endpoint (optional)
USE_DEDICATED_EMBEDDING_ENDPOINT=false
OLLAMA_EMBEDDING_BASE_URL=
OLLAMA_EMBEDDING_API_KEY=ollama
EMBEDDING_ENDPOINT_FALLBACK=true

# Neo4j database connection
NEO4J_URI=
NEO4J_PORT=
NEO4J_USER=
NEO4J_PASSWORD=

# FalkorDB database connection 
FALKORDB_URI=
FALKORDB_PORT=
FALKORDB_USER=
FALKORDB_PASSWORD=

USE_PARALLEL_RUNTIME=
SEMAPHORE_LIMIT=
GITHUB_SHA=
MAX_REFLEXION_ITERATIONS=
ANTHROPIC_API_KEY=

# FalkorDB Backup Configuration
BACKUP_RETENTION_DAYS=7        # Number of daily backups to keep
BACKUP_RETENTION_WEEKLY=4      # Number of weekly backups to keep  
BACKUP_RETENTION_MONTHLY=3     # Number of monthly backups to keep
BACKUP_WEBHOOK_URL=            # Optional webhook URL for backup notifications
RUN_INITIAL_BACKUP=true        # Run initial backup when service starts